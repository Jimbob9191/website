---
export interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
  slug: string;
}

const { title, description, image, category, slug } = Astro.props;
---

<a href={`/work/${slug}`} class="project-card">
  <div class="project-card-image-container">
    <img src={image} alt={title} class="project-card-image" />
  </div>
  
  <div class="project-card-content">
    <span class="project-card-category">{category}</span>
    <h3 class="project-card-title">{title}</h3>
    <p class="project-card-description">{description}</p>
    
    <div class="project-card-link">
      View Project
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>
</a>

<style>
  .project-card {
    display: block;
    background-color: var(--color-white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-medium);
    color: var(--color-black);
    height: 100%;
  }
  
  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }
  
  .project-card-image-container {
    width: 100%;
    height: 240px;
    overflow: hidden;
  }
  
  .project-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-medium);
  }
  
  .project-card:hover .project-card-image {
    transform: scale(1.03);
  }
  
  .project-card-content {
    padding: var(--space-lg);
  }
  
  .project-card-category {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .project-card-title {
    margin-bottom: var(--space-sm);
    font-size: 1.25rem;
  }
  
  .project-card-description {
    color: var(--color-medium-gray);
    margin-bottom: var(--space-md);
    font-size: 0.9375rem;
  }
  
  .project-card-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-accent);
    font-weight: 500;
    font-size: 0.9375rem;
    transition: all var(--transition-fast);
  }
  
  .project-card:hover .project-card-link {
    gap: calc(var(--space-xs) + 4px);
  }
</style>