---
const cards = [
  {
    title: 'About Me',
    description: 'Learn about my experience, skills, and design philosophy.',
    link: '/about',
    category: 'Profile',
    image: 'https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  },
  {
    title: 'My Work',
    description: 'Explore my projects and case studies in UX/UI design and product management.',
    link: '/work',
    category: 'Portfolio',
    image: 'https://images.pexels.com/photos/3182812/pexels-photo-3182812.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  },
  {
    title: 'Contact',
    description: 'Get in touch for collaborations, inquiries, or just to say hello.',
    link: '/contact',
    category: 'Connect',
    image: 'https://images.pexels.com/photos/3182834/pexels-photo-3182834.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  }
];
---

<section class="nav-cards section">
  <div class="container">
    <div class="cards-grid">
      {cards.map((card, index) => (
        <a href={card.link} class="card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="card-image-container">
            <img src={card.image} alt={card.title} class="card-image" />
            <div class="card-gradient"></div>
          </div>
          <div class="card-content">
            <span class="card-category">{card.category}</span>
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .nav-cards {
    padding: var(--space-xl) 0;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  
  .card {
    position: relative;
    background: var(--color-white);
    border-radius: 16px;
    overflow: hidden;
    color: var(--color-black);
    animation: slideUp var(--transition-medium) forwards;
    opacity: 0;
    transition: all var(--transition-medium);
    box-shadow: var(--shadow-sm);
  }
  
  .card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }
  
  .card-image-container {
    position: relative;
    width: 100%;
    height: 240px;
    overflow: hidden;
  }
  
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-medium);
    filter: contrast(0.9) brightness(0.9);
  }
  
  .card:hover .card-image {
    transform: scale(1.05);
  }
  
  .card-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
    pointer-events: none;
  }
  
  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-md);
  }
  
  .card-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-medium-gray);
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--color-lighter-gray);
    padding: 4px 8px;
    border-radius: 4px;
  }
  
  .card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-xs);
    color: var(--color-black);
  }
  
  .card p {
    color: var(--color-medium-gray);
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0;
  }
  
  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-lg);
    }
  }
</style>