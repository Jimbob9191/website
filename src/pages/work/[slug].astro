import Layout from '../../layouts/Layout.astro';
const { project } = Astro.props;
---

<Layout 
  title={`${project.title} - James UX/UI Designer & Product Manager`}
  description={project.overview}
>
  <div class="project-detail">
    <div class="project-hero">
      <img src={project.hero} alt={project.title} class="project-hero-image" />
    </div>
    
    <div class="container">
      <div class="project-content">
        <div class="project-header">
          <div class="project-meta">
            <span class="project-category">{project.category}</span>
            <h1>{project.title}</h1>
            <p class="project-overview">{project.overview}</p>
          </div>
          
          <div class="project-info">
            <div class="project-info-item">
              <h3>Client</h3>
              <p>{project.client}</p>
            </div>
            
            <div class="project-info-item">
              <h3>Duration</h3>
              <p>{project.duration}</p>
            </div>
            
            <div class="project-info-item">
              <h3>Year</h3>
              <p>{project.year}</p>
            </div>
          </div>
        </div>
        
        <div class="project-section">
          <h2>The Challenge</h2>
          <p>{project.challenge}</p>
        </div>
        
        <div class="project-section">
          <h2>Process</h2>
          <ul class="process-list">
            {project.process.map(step => (
              <li>{step}</li>
            ))}
          </ul>
        </div>
        
        <div class="project-images">
          {project.images.map(image => (
            <div class="project-image-container">
              <img src={image} alt="Project visual" class="project-image" />
            </div>
          ))}
        </div>
        
        <div class="project-section">
          <h2>Solution</h2>
          <p>{project.solution}</p>
        </div>
        
        <div class="project-section">
          <h2>Outcomes</h2>
          <ul class="outcomes-list">
            {project.outcomes.map(outcome => (
              <li>{outcome}</li>
            ))}
          </ul>
        </div>
        
        <div class="project-navigation">
          <a href="/work" class="btn-secondary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Back to All Projects
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .project-detail {
    padding-bottom: var(--space-xxl);
  }
  
  .project-hero {
    width: 100%;
    height: 50vh;
    min-height: 400px;
    position: relative;
    overflow: hidden;
  }
  
  .project-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .project-content {
    margin-top: calc(-1 * var(--space-xl));
    background: var(--color-white);
    border-radius: 16px 16px 0 0;
    padding: var(--space-xl);
    box-shadow: var(--shadow-sm);
    position: relative;
  }
  
  .project-header {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }
  
  .project-category {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .project-overview {
    font-size: 1.25rem;
    color: var(--color-medium-gray);
    margin-top: var(--space-sm);
  }
  
  .project-info {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    background-color: var(--color-lighter-gray);
    padding: var(--space-md);
    border-radius: 8px;
  }
  
  .project-info-item h3 {
    font-size: 0.875rem;
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-medium-gray);
  }
  
  .project-info-item p {
    font-weight: 500;
    margin-bottom: 0;
  }
  
  .project-section {
    margin-bottom: var(--space-xl);
  }
  
  .project-section h2 {
    margin-bottom: var(--space-md);
    position: relative;
    padding-bottom: var(--space-xs);
    display: inline-block;
  }
  
  .project-section h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
    height: 2px;
    background-color: var(--color-accent);
  }
  
  .process-list,
  .outcomes-list {
    list-style: none;
  }
  
  .process-list li,
  .outcomes-list li {
    padding: var(--space-sm) 0;
    position: relative;
    padding-left: 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .process-list li:last-child,
  .outcomes-list li:last-child {
    border-bottom: none;
  }
  
  .process-list li::before,
  .outcomes-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 1.25rem;
    width: 8px;
    height: 8px;
    background-color: var(--color-accent);
    border-radius: 50%;
  }
  
  .project-images {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }
  
  .project-image-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }
  
  .project-image {
    width: 100%;
    height: auto;
    transition: transform var(--transition-medium);
  }
  
  .project-image-container:hover .project-image {
    transform: scale(1.02);
  }
  
  .project-navigation {
    margin-top: var(--space-xl);
    display: flex;
    justify-content: center;
  }
  
  .btn-secondary {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  @media (min-width: 768px) {
    .project-header {
      grid-template-columns: 2fr 1fr;
      align-items: start;
    }
    
    .project-images {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>